@model Brony
<p>@Model.UserId</p>
<form asp-action="CreateBrony" class="col-5" method="post">
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <div class="form-group">
        <label asp-for="Name" ></label>
        <input asp-for="Name" >
    </div>
    <div class="form-group">
        <label asp-for="Color" ></label>
        <input asp-for="Color" >
    </div>
    <div class="form-group">
        <label asp-for="Condition" ></label>
        <input asp-for="Condition" >
    </div>
    <div class="form-group">
        <label asp-for="Price" ></label>
        <input type="number" step=".01" asp-for="Price" >
    </div>
    <input type="submit"  value="Create Brony" class="btn btn-dark">
</form>