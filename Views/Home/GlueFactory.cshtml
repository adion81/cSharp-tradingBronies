@model List<Brony>

<h2>Here are all the Bronies!</h2>

<table class="table table-striped"> 
    <thead>
        <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Condition</th>
            <th>Price</th>
            <th>Owner</th>
        </tr>
    </thead>
    <tbody>
        @foreach( var b in Model)
        {
            <tr>
                <td>@b.Name</td>
                <td>@b.Color</td>
                <td>@b.Condition</td>
                <td>@b.Price</td>
                <td><a href="/profile/@b.UserId" >@b.Owner.Name</a></td>
            </tr>
        }
    </tbody>
</table>